application "pauz-journaling" {
  # PostgreSQL Database Resource
  database "pauz-db" {
    name = "pauz-journaling"
  }

  # SmartBuckets for AI-generated content and large files
  smartbucket "journal-prompts" {}
  smartbucket "journal-analysis" {}
  smartbucket "free-journals" {}
