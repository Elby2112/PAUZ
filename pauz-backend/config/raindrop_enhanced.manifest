  smartbucket "garden" {}
  smartbucket "pdf-exports" {}
  smartbucket "audio-files" {}

  # SmartMemories for AI context and user sessions
  smartmemory "user-memories" {}
  smartmemory "ai-contexts" {}
  smartmemory "session-cache" {}
}